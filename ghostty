# Monaspace font features
font-feature = "zero,kern,calt,clig,liga,ss01,ss02,ss03,ss04,ss05,ss06,ss07,ss08,ss09,ss10,ss11,ss12,ss13,ss14,ss15,ss16,ss17,ss18"

# --- Rendering ---
