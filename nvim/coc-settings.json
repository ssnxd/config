  "suggest.autoTrigger": "always",
  "suggest.enableFloat": true,
  "suggest.floatConfig": {
    "border": true,
    "rounded": true,
    "winblend": 15,
    "highlight": "GruvboxFg4",
  },
  "diagnostic.floatConfig": {
    "border": true,
    "rounded": true,
    "winblend": 15,
    "highlight": "GruvboxFg4",
  },
  "hover.floatConfig": {
    "border": true,
    "rounded": true,
    "winblend": 15,
    "highlight": "GruvboxFg4",
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  },
}

